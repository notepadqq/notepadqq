#!/bin/sh
cd `dirname $0` > /dev/null
SCRIPTPATH=`pwd -P`
cd - > /dev/null

if [ `getconf LONG_BIT` = "64" ]
then
    PERSONAL_QT_LIB_PATH=~/Qt/5.3/gcc_64/lib
else
    PERSONAL_QT_LIB_PATH=~/Qt/5.3/gcc/lib
fi

export LD_LIBRARY_PATH="$PERSONAL_QT_LIB_PATH"

xprop -name "unity" >/dev/null 2>&1
if [ $(echo $?) = 1 ]
then
  unity=1
fi
xprop -name "kwin" >/dev/null 2>&1
if [ $(echo $?) = 1 ]
then
  kde=1
fi

if [ unity=1 ] || [ kde=1 ]
then
  gtk_style='-style=gtk'
fi

exec "$SCRIPTPATH"/notepadqq-bin $gtk_style "$@"
